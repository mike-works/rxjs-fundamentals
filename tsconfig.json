{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "src/**/*.js", "test/**/*.ts", "test/**/*.js", "./webpack.config.js"]
}
